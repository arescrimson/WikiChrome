{
  "manifest_version": 3,
  "name": "WikiChrome",
  "version": "1.0",
  "description": "Chrome Web Extension for opening Wikipedia pages with highlighted text.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "notifications", 
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }, 
  "commands": {
    "testingcommand": {
      "suggested_key": { 
        "default": "Ctrl+Q",
        "chromeos": "Ctrl+Q", 
        "windows": "Ctrl+Q" 
      },
      "description": "Description of your command", 
      "global": true
    }
  }
}