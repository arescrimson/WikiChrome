{
  "manifest_version": 3,
  "name": "WikiChrome",
  "version": "1.0",
  "description": "Chrome Web Extension for opening Wikipedia pages with highlighted text.",
  "icons": {
    "16": "media/wiki.png",
    "48": "media/wiki.png",
    "128": "media/wiki.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "media/wiki.png",
      "48": "media/wiki.png",
      "128": "media/wiki.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "testingcommand": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "chromeos": "Ctrl+Q",
        "windows": "Ctrl+Q"
      },
      "description": "WikiChrome Shortcut",
      "global": true
    }
  }
}